{
  "extends": "@repo/typescript-config/hono",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "paths": {
      "@/*": ["../../apps/api/src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/packages/web"]
  },
  "include": ["src"]
}
