{
  "name": "nextplate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate --filter=@repo/database",
    "db:migrate": "turbo run db:migrate --filter=@repo/database",
    "db:push": "turbo run db:push --filter=@repo/database",
    "db:studio": "turbo run db:studio --filter=@repo/database"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-auth": "^1.2.8",
    "zod": "^3.25.55"
  }
}
